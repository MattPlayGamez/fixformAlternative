<!DOCTYPE html>
<html lang="nl">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bekijk probleem </title>
    <script defer src="/viewRoom.js"></script>
    <style>
        body,
        html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: 'Helvetica', sans-serif;
            background: linear-gradient(180deg, #0e90a7 0%, #131185 100%);
            display: flex;
            justify-content: center;
            align-items: flex-start;
            color: white;
        }

        #dashboardContainer {
            width: 90%;
            max-width: 1200px;
            margin-top: 5vh;
            background: #121212;
            border-radius: 20px;
            padding: 20px;
            box-sizing: border-box;
            color: #333;
            display: flex;
            justify-content: space-between;
        }

        #dashboardHeader {
            text-align: center;
            font-size: 7vw;
            font-weight: 600;
            color: #0e90a7;
            margin-bottom: 5vh;
        }

        .section {
            margin-bottom: 5vh;
        }

        .section h2 {
            font-size: 5vw;
            color: #ffc0c2;
            margin-bottom: 2vh;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            margin-bottom: 0.5vh;
            font-weight: bold;
        }

        input {
            padding: 1vh;
            margin-bottom: 1vh;
            border-radius: 5px;
            border: 1px solid #ddd;
            box-sizing: border-box;
            font-size: 1rem;
        }

        .btn {
            padding: 1vh 2vw;
            border-radius: 5px;
            color: white;
            text-align: center;
            cursor: pointer;
            margin: 0.5vh 0;
            display: inline-block;
            text-decoration: none;
            font-size: 1rem;
        }

        .btn-submit {
            background-color: #34c759;
        }

        .btn-back {
            background-color: #007bff;
            display: inline-block;
            margin-right: 1vw;
        }

        .documents {
            width: 45%;
            border-left: 2px solid #ddd;
            padding-left: 20px;
        }

        .documents h2 {
            color: #ffc0c2;
        }

        .documents a {
            display: block;
            color: #0e90a7;
            text-decoration: none;
            margin-bottom: 1vh;
            font-size: 1.2rem;
        }

        .documents a:hover {
            text-decoration: underline;
        }

        @media (min-width: 768px) {
            #dashboardHeader {
                font-size: 36px;
            }

            .section h2 {
                font-size: 24px;
            }

            .btn,
            input {
                font-size: 17px;
            }
        }

        .x-button {
            background-color: transparent;
            border: none;
            color: red;
            font-size: 18px;
            font-weight: bold;
            cursor: pointer;
            padding: 0;
            margin: 0;
            line-height: 1;
        }

        /* Optional: Add hover effect */
        .x-button:hover {
            color: darkred;
        }

        .preview-file {
            #preview-iframe {
                position: fixed;
                top: 10px;
                left: 10px;
                width: 95vw;
                height: 90vh;
                border: none;
                display: none;
                z-index: 1000;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
                background-color: #fff;
            }
        }
        #preview-file {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: 1rem solid #fff;
            z-index: 1000;
        }
    </style>
</head>

<body>
    <div id="dashboardContainer">
        <div class="section">
            <h2>Bekijk</h2>

            <label for="name">Naam ruimte:</label>
            <p>
                <%= room.name %>
            </p>
            <label for="name">Plaats:</label>

            <p>
                <%= room.location %>
            </p>
            <label for="serialNumber">Serienummer:</label>
            <p>
                <%= room.serialNumber %>
            </p>

            <label for="manufacturer">Fabrikant:</label>
            <p>
                <%= room.manufacturer %>
            </p>

            <label for="contactNumber">ContactNummer:</label>
            <p>
                <%= room.contactNumber %>
            </p>
            <% if (lengthProblems !== 0) { %>
                <label for="allProblems">Aantal problemen</label>
                <p>
                    <% if (lengthProblems === 1) { %>
                       Er is 1 probleem
                     
                    <% } else if (lengthProblems > 1) {%>
                        Er zijn <%= lengthProblems %> problemen
                     
                    <% }%>
            <% } %>
            
                 
            </p>
            <input type="text" id="id" name="id" value="<%= id %>" style="display: none;">
            <a href="/dashboard" class="btn btn-back">Terug naar Dashboard</a>
        </div>

        <div class="documents">
            <h2>Documenten</h2>

            <% room.files.forEach((fileArray)=> { %>
                <% fileArray.forEach((doc)=> { %>
                    <a href="<%= doc.publicLink %>" id="hover-link" target="_blank">
                        <%= doc.name %>

                    </a>
                    <form action="/delete-document/<%= id %>/<%= doc.id %>" method="POST">
                        <!-- Small button shaped like an "X" -->
                        <button type="submit" class="x-button">X</button>
                    </form>
                    <% }) %>
                        <% }) %>

                            <form action="/view-room/<%= room._id %>" method="POST" enctype="multipart/form-data">
                                <input type="file" name="docUpload" id="docUpload" accept="documents/*">
                                <button id="uploadbtn" type="submit" hidden=""></button>
                            </form>
        </div>
    </div>
    <script>
        
    </script>
    <iframe src="" width="90%" height="90%" frameborder="0" id="preview-file"></iframe>
</body>
